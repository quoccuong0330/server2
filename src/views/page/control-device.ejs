<div class="container mt-5 modal-id">
    <div class="col-12 d-flex flex-row-reverse">
       <div class="box-temp d-flex align-items-center justify-content-around col-5">
            <div class="d-flex">Temperature:<p class="ml-1" id="temp-value"><%=resTempAndHumidity.temp%></p>Â°C</div>
            <div class="ml-3 d-flex">Humidity: <p class="ml-1" id="humi-value"><%=resTempAndHumidity.humidity%></p>%</div>
       </div>
    </div>
    <div class="col-12 ">
      <%let arrayID = []%>
      <% for(const item of arrayDevice) { %>
          <%arrayID.push(item[0].name)%>
          <div class="bg-wrap-form  %>">
              <div class="list-row tag-content">
                  <div class="wrap-content d-flex justify-content-between align-items-center">
                      <div class="section-content">
                          <div class="">
                              <label id="label-text-<%=item[0].idPort %>" for="inp0">ID device: <%= item[0].idPort %></p></label>
                            </div>
                      </div>
                     
                  </div>
                  <div class="extension d-flex flex-wrap" id="section-id-<%=item[0].idPort %>">
                      <% for(const itemData of item) { %>
                         <div class="col-6 mt-2 <%=item[0].idPort %>" order="<%=item[0].order%>">
                              <div class="col-12 p-2 wrapper-port" id="port-<%=item[0].idPort%>-<%=itemData.order%> ">
                                <%if(itemData.name=="") {%>
                                    <p class=" d-flex justify-content-center">Name</p>
                                <%} else {%>
                                    <p class=" d-flex justify-content-center"><%=itemData.name%></p>
                                    <%}%>
                                 <div class="  mt-3 mb-3">
                                      <div class=" ">
                                       <div class="d-flex justify-content-center"> <label class="label-port d-flex">Port 1: <p class="value-brightness-<%=itemData._id%>-port1 ml-2"  id="port1-value-<%=item[0].idPort%>-<%=itemData.order%>"><%=itemData.port1%></p></label></div>
                                        <div class="d-flex justify-content-around align-items-center ">
                                            <button type="menu"  class="btn-control-down button-brightness justify-content-center btn-decrease-<%=itemData._id%>-port1   align-items-center" onclick="handleDecrease(`<%=itemData._id%>-port1`,'<%=itemData.order%>','<%=itemData._id%>','<%=itemData.idPort%>')">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-lg" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M2 8a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11A.5.5 0 0 1 2 8" style="color: white;"/>
                                                  </svg>
                                            </button>
                                                    <input
                                                    type="range"
                                                    class="form-range ip-select-<%=itemData._id%> form-range-<%=itemData.colorPort1%>  port1-<%=item[0].idPort%>-<%=itemData.order%>"
                                                    min="0"
                                                    max="100"
                                                    step="1"
                                                    id="brightnessRange-<%=itemData._id%>-port1 port1-<%=item[0].idPort%>-<%=itemData.order%>"
                                                    value="<%=itemData.port1%>"
                                                    onchange="handleOnChangeInput('<%=itemData.order%>','<%=itemData._id%>','<%=itemData.idPort%>')"
                                                    oninput="onInput(this.value,`<%=itemData._id%>-port1` )"
                                                  />  
                                          <button class="btn-control-up button-brightness "  onclick="handleIncrease(`<%=itemData._id%>-port1`,'<%=itemData.order%>','<%=itemData._id%>','<%=itemData.idPort%>' )">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" style="color: white;"/>
                                              </svg>
                                          </button>
                                        </div>     
                                        
                                    </div>
                                    <div class="  mt-3 mb-3">
                                        <div class=" ">
                                            <div class="d-flex justify-content-center"> <label class="label-port d-flex">Port 2: <p class="value-brightness-<%=itemData._id%>-port2 ml-2" id="port2-value-<%=item[0].idPort%>-<%=itemData.order%>"><%=itemData.port2%></p></label></div>

                                          <div class="d-flex justify-content-around align-items-center ">
                                            <button type="menu"  class="btn-control-down button-brightness justify-content-center btn-decrease-<%=itemData._id%>-port1   align-items-center" onclick="handleDecrease(`<%=itemData._id%>-port2`,'<%=itemData.order%>','<%=itemData._id%>','<%=itemData.idPort%>')">

                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-dash-lg" viewBox="0 0 16 16" >
                                                    <path fill-rule="evenodd" d="M2 8a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11A.5.5 0 0 1 2 8" style="color: white;" />
                                                  </svg>
                                              </button>
                                                      <input
                                                      type="range"
                                                      class="form-range ip-select-<%=itemData._id%> form-range-<%=itemData.colorPort2%>  port2-<%=item[0].idPort%>-<%=itemData.order%>"
                                                      min="0"
                                                      max="100"
                                                      step="1"
                                                      id="brightnessRange-<%=itemData._id%>-port2 port2-<%=item[0].idPort%>-<%=itemData.order%>"
                                                      value="<%=itemData.port2%>"
                                                    onchange="handleOnChangeInput('<%=itemData.order%>','<%=itemData._id%>','<%=itemData.idPort%>')"
                                                    
                                                      oninput="onInput(this.value,`<%=itemData._id%>-port2` )"
                                                    />  
                                            <button class="btn-control-up button-brightness "  onclick="handleIncrease(`<%=itemData._id%>-port2`,'<%=itemData.order%>',
                                              '<%=itemData._id%>','<%=itemData.idPort%>'
                                            )">
                                                <svg xmlns="http://www.w3.org/2000/svg"  width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2" style="color: white;"/>
                                                  </svg>
                                            </button>
                                          </div>     
                                            <div class="d-flex justify-content-center flex-column align-items-center">
                                                <button onclick="handleSavePort('<%=itemData._id%>', '<%=item[0].idPort %>','<%=itemData.order%>')" data="<%=itemData._id%>,<%=item[0].idPort %>,<%=itemData.order%>" class="btn-save btn btn-primary btn-<%=itemData._id%> ">Save</button>
                                            </div>
                                        </div>
                                      </div>
                                 </div>
                               
                              </div>
                         </div>
                      <%}%>
                  </div>
              </div>
          </div>
      <%}%>
  
  </div>
  